.row
  .page-head
    h3 #{icon_text('dashboard', 'Projects')}
  .clearfix

ul.nav.nav-tabs
  li.active
    a #{icon_text('dashboard', 'Projects')}
  li
    a #{icon_text('stats', 'Dashboard (coming soon)')}
  - if current_user.admin? || current_user.owner?
    li
      a #{icon_text('user', 'Teams (coming soon)')}
    li
      a #{icon_text('cog', 'Settings (coming soon)')}


.tab-content
  .tab-pane.active
    .row.contents.tab-contents
      - @projects.each do |p|
        .col-lg-3
          .panel.panel-default.panel-project
            h3.title
              = link_to "#{p.name}", project_path(p)
            .panel-body
              #{markdown(truncate(p.description, length: 100))}
            .panel-footer
              - if p.manager?(current_user)
                = link_to icon_text('edit', 'Edit'), edit_project_path(p), class: "pull-right"
              - if p.public
                span.label.label-primary Public
              - else
                span.label.label-default Private

      - if current_user.admin? || current_user.owner?
        .col-lg-3.text-center
          h3 somthings missing?
          = link_to "start new project", new_project_path, class: "btn btn-lg btn-primary"
          hr
          = link_to "invite your team", new_user_invitation_path, class: "btn btn-lg btn-pink"
